speed=0

class Car:
    def __init__(self,marka,model,year):                    
       self.marka= marka
       self.model=model
       self.year=year
       self.speed=speed
#увеличивает скорость машины на 5
    def higher_speed(self):
        self.speed=self.speed+5
#уменьшает скорость машины на 5        
    def lower_speed(self):                    
        self.speed=self.speed-5
        print(f'New speed of the car is {self.speed}')
    def stop(self):
        print(f'Ur car is stoping.Speed is {speed}')
#выводит текущую скорость
    def get_speed(self):
        print(self.speed)
#меняет направление движения машинны
    def get_xod(self):
        self.speed=self.speed*(-1)
